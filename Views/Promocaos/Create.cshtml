@model ProjetoMVC.Models.Promocao

@{
    ViewData["Title"] = "Create";
}



<h4>Confira nossas promoções!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PacotesCompletos" class="control-label"></label>
                <input asp-for="PacotesCompletos" class="form-control" />
                <span asp-validation-for="PacotesCompletos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PacotesIndividuais" class="control-label"></label>
                <input asp-for="PacotesIndividuais" class="form-control" />
                <span asp-validation-for="PacotesIndividuais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PromocaoVerao" class="control-label"></label>
                <input asp-for="PromocaoVerao" class="form-control" />
                <span asp-validation-for="PromocaoVerao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Escolher" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar ao inicio</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
