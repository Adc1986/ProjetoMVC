@model IEnumerable<ProjetoMVC.Models.Promocao>

@{
    ViewData["Title"] = "Index";
}

<h1>Promoções</h1>

<p>
    <a asp-action="Create">Clique aqui!</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PacotesCompletos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PacotesIndividuais)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PromocaoVerao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PacotesCompletos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PacotesIndividuais)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PromocaoVerao)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
